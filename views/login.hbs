{{#> layout}}
{{#*inline "head"}}
<title>Login - {{@websiteName}}</title>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container form-signin" style="
    display: flex;
    align-content: center;
    height: 100vh;
    width: auto;
">
    <div style="
    margin-top: auto;
    margin-bottom: auto;
    width: 450px;
">  
    <div style="text-align: center;">
    <img src={{asset "/header-logo.png"}} alt='Logo' style=""/>    
    </div>
    
    <form action="/login" method="POST">
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            <strong>Đăng nhập thất bại.</strong> {{error}}
        </div>
        {{/if}}
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="form-group">
            <label for="email" class="text-color-white">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="name@gmail.com" required value="{{email}}">
        </div>
        <div class="form-group">
            <label for="password" class="text-color-white">Mật khẩu</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu của bạn" minlength="6" required>
        </div>
        <div class="form-group">
             <button class="btn btn-primary btn-block" type="submit" 
        style="
    background: linear-gradient(to right,#ba33db 0%,#ed2b7b 100%);
    border-radius: 20px;
    border: 1px solid transparent;
"
        >ĐĂNG NHẬP</button>
        </div>
    </form>
    </div>
    
    {{!-- {{#if enabledFacebook}}
        <a class="btn btn-block btn-lg btn-secondary" href="/auth/facebook">
            <i class="fa fa-facebook"></i> Sign in with Facebook
        </a>
    {{else}}
        <div class="alert alert-warning">
            Facebook Login disabled.
        </div>
    {{/if}}
    {{#if enabledGoogle}}
        <a class="btn btn-block btn-lg btn-secondary" href="/auth/google">
            <i class="fa fa-google"></i> Sign in with Google
        </a>
    {{else}}
        <div class="alert alert-warning">
            Google Login disabled.
        </div>
    {{/if}} --}}
</div>
{{/inline}}
{{/layout}}
