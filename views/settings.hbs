{{#> layout}}
{{#*inline "head"}}
<title>Settings - {{@websiteName}}</title>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container top-70">

{{#if error}}
<div class="alert alert-danger" role="alert">
    {{error}}
</div>
{{/if}}

<h2 class="text-color-white">Cài đặt chung</h2>
<form method="post" action="/settings">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="form-group">
        <label class="text-color-white" for="name">Tên (3 đến 30 kí tự)</label>
        <input  type="text" minlength="3" maxlength="30" required name="name" class="form-control" id="name" placeholder="Μορφεύς" value="{{user.name}}">
    </div>
    <button type="submit" class="btn btn-secondary">Lưu</button>
</form>
