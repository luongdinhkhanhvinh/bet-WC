{{#> layout}}
{{#*inline "head"}}
<title>{{displayedUser.name}} - {{@websiteName}}</title>
<style>
.result-correct {
    background-color: #009900;
}
.result-diff {
    background-color: #00e600;
}
.result-winner {
    background-color: #ccffcc;
}
</style>
{{/inline}}
{{#*inline "body"}}
{{> navbar}}
<div class="container top-70">

<h3 class="text-color-white">{{displayedUser.name}} <small class="text-danger">Điểm {{displayedUser.score}}, Xếp hạng {{displayedUser.rank}}</small></h3>

{{#if matches}}
<table class="table table-sm">
    <thead>
    <tr>
        <th colspan="2"></th>
        <th colspan="3" class="text-center text-color-white">Kết quả trận đấu</th>
        <th class="text-center text-color-white">Cược</th>
        <th class="text-center text-color-white">Điểm</th>
    </tr>
    </thead>
    {{#each matches}}
    <tr class="result-{{result}} text-color-white">
        <td class="small"><span class="d-none d-sm-inline">{{calendar starts_at}}</span><span class="d-sm-none">{{calendarShort starts_at}}</span></td>
        <td class="small">
            <span class="d-none d-sm-inline">{{match_type_name}}</span>
            <span class="d-sm-none">{{match_type_code}}</span>
            {{> score_factor match_type_score_factor}}
        </td>
        <td class="text-right">
            <em class="d-none d-sm-inline">{{home_team_name}}</em><em class="d-sm-none">{{home_team_code}}</em>
        </td>
        <td class="text-center">
            <strong>{{showGoals match_goals_home}}</strong> : <strong>{{showGoals match_goals_away}}</strong>
        </td>
        <td class="text-left">
            <em class="d-none d-sm-inline">{{away_team_name}}</em><em class="d-sm-none">{{away_team_code}}</em>
        </td>
        <td class="text-center">
        {{showGoals bet_goals_home}} : {{showGoals bet_goals_away}}
        </td>
        <td class="text-center {{#if (isZero score)}}is-zero{{/if}}">
        {{score}}
        </td>
    </tr>
    {{/each}}
</table>
{{else}}
<div class="alert alert-danger" role="alert">
    <strong>Không có cược để hiển thị.</strong>
</div>
{{/if}}
</div>
{{/inline}}
{{/layout}}
